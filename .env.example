# Server Configuration
PORT=8080

# Overseer Configuration
OVERSEER_URL=http://localhost:5055
OVERSEER_API_KEY=your-overseer-api-key-here

# API Configuration
# Timeout for Overseer API requests in seconds (default: 30)
API_TIMEOUT=30

# Maximum retry attempts for failed API requests (default: 3)
MAX_RETRIES=3

# Dry-run mode - logs what would be deleted without actually deleting (default: false)
DRY_RUN=false

# Overseer monitor polling interval in seconds (default: 60)
# Set to 0 to disable background polling.
OVERSEER_POLL_INTERVAL=60

# Logging Configuration
# Options: debug, info, warn, error
LOG_LEVEL=info